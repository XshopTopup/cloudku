<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Integration - CloudKu CDN</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>☁️</text></svg>">
    <style>
        /* Modern Typography & Reset */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&family=Fira+Code:wght@400;500&display=swap');

        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Inter', -apple-system, sans-serif;
            background-color: #0b1a14;
            background-image: radial-gradient(rgba(46, 204, 113, 0.1) 1px, transparent 1px);
            background-size: 32px 32px;
            min-height: 100vh;
            color: #ecf0f1;
            line-height: 1.7;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .content-wrapper {
            width: 100%;
            max-width: 800px; /* Dipersempit sedikit agar lebih fokus/elegan */
            margin: 0 auto;
            padding: 80px 24px;
            animation: fadeIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(15px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 60px;
        }

        .header h1 {
            color: #2ecc71;
            font-size: 42px;
            font-weight: 800;
            letter-spacing: -1px;
            margin-bottom: 12px;
        }

        .header p {
            color: rgba(236, 240, 241, 0.5);
            font-size: 18px;
        }

        /* Endpoint Badge */
        .endpoint-container {
            display: flex;
            justify-content: center;
            margin-bottom: 50px;
        }

        .endpoint-badge {
            display: flex;
            align-items: center;
            background: rgba(255, 255, 255, 0.03);
            padding: 12px 24px;
            border-radius: 16px;
            border: 1px solid rgba(46, 204, 113, 0.2);
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .method {
            background: #2ecc71;
            color: #0b1a14;
            padding: 4px 10px;
            border-radius: 6px;
            font-weight: 800;
            font-size: 12px;
            margin-right: 16px;
        }

        code.url {
            color: #2ecc71;
            font-family: 'Fira Code', monospace;
            font-size: 14px;
            font-weight: 500;
        }

        /* Typography */
        h2 {
            color: #2ecc71;
            margin: 50px 0 25px;
            font-size: 24px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        h2::before {
            content: '';
            width: 4px;
            height: 24px;
            background: #2ecc71;
            border-radius: 4px;
        }

        h3 {
            font-size: 16px;
            margin: 30px 0 15px;
            color: rgba(236, 240, 241, 0.9);
            font-weight: 600;
        }

        p { margin-bottom: 20px; color: rgba(236, 240, 241, 0.7); }

        /* Code Block Design */
        .code-block-wrapper {
            position: relative;
            margin: 20px 0;
            border-radius: 12px;
            overflow: hidden;
            background: #050d0a;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        pre {
            padding: 24px;
            overflow-x: auto;
            font-family: 'Fira Code', monospace;
            font-size: 13.5px;
            color: #bdc3c7;
        }

        .copy-btn {
            position: absolute;
            top: 12px;
            right: 12px;
            background: rgba(46, 204, 113, 0.1);
            border: 1px solid rgba(46, 204, 113, 0.2);
            color: #2ecc71;
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 11px;
            font-weight: 700;
            cursor: pointer;
            transition: 0.2s;
            text-transform: uppercase;
        }

        .copy-btn:hover {
            background: #2ecc71;
            color: #0b1a14;
        }

        /* Table Style */
        .table-container {
            overflow-x: auto;
            margin: 25px 0;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.02);
            text-align: left;
        }

        th, td {
            padding: 16px 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        th {
            background: rgba(46, 204, 113, 0.05);
            color: #2ecc71;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        td code {
            color: #2ecc71;
            background: rgba(46, 204, 113, 0.1);
            padding: 2px 6px;
            border-radius: 4px;
            font-family: 'Fira Code', monospace;
            font-size: 13px;
        }

        /* Status Badges */
        .status-code {
            display: inline-flex;
            align-items: center;
            padding: 4px 12px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 11px;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .status-200 { background: rgba(46, 204, 113, 0.1); color: #2ecc71; border: 1px solid rgba(46, 204, 113, 0.2); }
        .status-400 { background: rgba(231, 76, 60, 0.1); color: #e74c3c; border: 1px solid rgba(231, 76, 60, 0.2); }

        /* Footer */
        footer {
            margin-top: 80px;
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            padding-top: 40px;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            color: #2ecc71;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: 0.3s;
            gap: 8px;
            margin-bottom: 20px;
        }

        .back-link:hover { opacity: 0.7; transform: translateX(-4px); }

        @media (max-width: 768px) {
            .header h1 { font-size: 32px; }
            .content-wrapper { padding: 40px 20px; }
        }
    </style>
</head>
<body>

<div class="content-wrapper">
    <header class="header">
        <h1>API Documentation</h1>
        <p>Integrasikan layanan CloudKu CDN ke aplikasi Anda</p>
    </header>

    <div class="endpoint-container">
        <div class="endpoint-badge">
            <span class="method">POST</span>
            <code class="url" id="base-url-display">loading...</code>
        </div>
    </div>

    <section>
        <h2>Parameter Request</h2>
        <p>Gunakan endpoint ini untuk mengunggah aset dengan format <code>multipart/form-data</code>.</p>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Parameter</th>
                        <th>Tipe</th>
                        <th>Wajib</th>
                        <th>Keterangan</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><code>file</code></td>
                        <td>Binary</td>
                        <td>Ya</td>
                        <td>Max file size: 200MB</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <section>
        <h2>Contoh Implementasi</h2>
        
        <h3>JavaScript (Fetch)</h3>
        <div class="code-block-wrapper">
            <button class="copy-btn" onclick="copyCode(this)">Copy</button>
            <pre><code id="js-code">const formData = new FormData();
formData.append('file', fileInput.files[0]);

fetch('[BASE_URL]/cdn/api.php', {
    method: 'POST',
    body: formData
})
.then(res => res.json())
.then(data => console.log(data));</code></pre>
        </div>

        <h3>PHP (cURL)</h3>
        <div class="code-block-wrapper">
            <button class="copy-btn" onclick="copyCode(this)">Copy</button>
            <pre><code id="php-code">$file = new CURLFile('image.jpg');
$ch = curl_init('[BASE_URL]/cdn/api.php');

curl_setopt($ch, CURLOPT_POSTFIELDS, ['file' => $file]);
curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);

$response = curl_exec($ch);
echo $response;</code></pre>
        </div>
    </section>

    <section>
        <h2>Respon Server</h2>
        
        <span class="status-code status-200">Success Response</span>
        <div class="code-block-wrapper">
            <button class="copy-btn" onclick="copyCode(this)">Copy</button>
            <pre><code>{
  "status": "success",
  "url": "[BASE_URL]/f/custom123.jpg",
  "filename": "custom123.jpg",
  "originalName": "foto.jpg"
}</code></pre>
        </div>

        <span class="status-code status-400">Error Response</span>
        <div class="code-block-wrapper">
            <button class="copy-btn" onclick="copyCode(this)">Copy</button>
            <pre><code>{
  "status": "error",
  "message": "Upload limit exceeded (200MB max)"
}</code></pre>
        </div>
    </section>

    <footer>
        <a href="/" class="back-link">
            <span>←</span> Kembali ke Dashboard
        </a>
        <p style="font-size: 12px; color: rgba(236, 240, 241, 0.2);">
            © 2026 CloudKu CDN • Developer Tools
        </p>
    </footer>
</div>

<script>
    // Logic deteksi domain tetap dipertahankan
    const currentOrigin = window.location.origin;
    const apiPath = "/cdn/api.php";

    document.getElementById('base-url-display').innerText = currentOrigin + apiPath;
    
    // Gunakan cara yang lebih aman untuk replace placeholder tanpa merusak event listener
    const replacePlaceholder = () => {
        const walkers = document.createTreeWalker(document.body, NodeFilter.SHOW_TEXT, null, false);
        let node;
        while(node = walkers.nextNode()) {
            if (node.nodeValue.includes('[BASE_URL]')) {
                node.nodeValue = node.nodeValue.replace(/\[BASE_URL\]/g, currentOrigin);
            }
        }
    };
    replacePlaceholder();

    // Fungsi Copy Code fungsional
    function copyCode(button) {
        const pre = button.nextElementSibling;
        const text = pre.innerText;
        
        navigator.clipboard.writeText(text).then(() => {
            const originalText = button.innerText;
            button.innerText = "Copied!";
            button.style.background = "#2ecc71";
            button.style.color = "#0b1a14";
            
            setTimeout(() => {
                button.innerText = originalText;
                button.style.background = "rgba(46, 204, 113, 0.1)";
                button.style.color = "#2ecc71";
            }, 2000);
        });
    }
</script>
</body>
</html>
