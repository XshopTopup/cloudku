<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CloudKu CDN Uploader</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>‚òÅÔ∏è</text></svg>">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
            background-color: #0b1a14;
            background-image: radial-gradient(rgba(46, 204, 113, 0.1) 1px, transparent 1px);
            background-size: 30px 30px;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            color: #ecf0f1;
        }

        .container {
            max-width: 600px;
            width: 100%;
            animation: fadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .header h1 {
            color: #2ecc71;
            font-size: 48px;
            letter-spacing: -1px;
            font-weight: 800;
            margin-bottom: 8px;
            text-shadow: 0 0 20px rgba(46, 204, 113, 0.2);
        }

        .header p {
            color: rgba(236, 240, 241, 0.6);
            font-size: 16px;
            font-weight: 400;
        }

        /* UPLOAD AREA */
        .upload-area {
            border: 2px dashed rgba(46, 204, 113, 0.2);
            border-radius: 20px;
            padding: 60px 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: rgba(46, 204, 113, 0.02);
        }

        .upload-area:hover {
            background: rgba(46, 204, 113, 0.05);
            border-color: #2ecc71;
        }

        .upload-text { font-size: 20px; font-weight: 600; margin-bottom: 8px; }
        .upload-subtext { font-size: 14px; color: rgba(236, 240, 241, 0.4); }

        input[type="file"] { display: none; }

        /* PROGRESS & INFO */
        .file-info { margin-top: 20px; text-align: center; display: none; }
        .file-info.show { display: block; }
        .file-name-preview { color: #2ecc71; font-weight: 600; font-size: 14px; }

        .progress-container { margin-top: 20px; display: none; }
        .progress-container.show { display: block; }
        .progress-bar-wrapper {
            width: 100%;
            height: 6px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            overflow: hidden;
        }
        .progress-bar {
            height: 100%;
            background: #2ecc71;
            width: 0%;
            transition: width 0.3s ease;
            box-shadow: 0 0 10px rgba(46, 204, 113, 0.5);
        }

        /* BUTTONS */
        .btn {
            background: #2ecc71;
            color: #0b1a14;
            padding: 18px;
            border: none;
            border-radius: 14px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 700;
            width: 100%;
            margin-top: 25px;
            transition: 0.3s;
        }

        .btn:hover:not(:disabled) { background: #27ae60; transform: translateY(-2px); }
        .btn:disabled { opacity: 0.5; }

        /* RESULT SECTION (Seamless) */
        .result {
            margin-top: 10px;
            display: none;
            animation: fadeIn 0.5s ease;
        }

        .success-badge {
            color: #2ecc71;
            text-align: center;
            font-weight: 700;
            font-size: 18px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .label-text {
            display: block;
            font-size: 12px;
            color: rgba(236, 240, 241, 0.4);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .url-display {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(46, 204, 113, 0.2);
            padding: 15px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .url-text {
            flex: 1;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            font-family: monospace;
            color: #2ecc71;
            font-size: 14px;
        }

        .copy-action {
            background: #2ecc71;
            color: #0b1a14;
            border: none;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 700;
            cursor: pointer;
            transition: 0.2s;
        }

        .copy-action:hover { background: #27ae60; }

        .action-links {
            margin-top: 25px;
        }

        .sec-btn {
            display: block;
            width: 100%;
            padding: 14px;
            background: transparent;
            border: 1px solid rgba(46, 204, 113, 0.4);
            color: #2ecc71;
            border-radius: 12px;
            text-align: center;
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
            transition: 0.3s;
            cursor: pointer;
        }

        .sec-btn:hover {
            background: rgba(46, 204, 113, 0.1);
            border-color: #2ecc71;
        }

        /* FOOTER */
        .footer {
            margin-top: 60px;
            text-align: center;
            border-top: 1px solid rgba(255,255,255,0.05);
            padding-top: 30px;
        }
        .footer-link { color: #2ecc71; text-decoration: none; font-size: 14px; font-weight: 600; }
        .footer-text { font-size: 12px; color: rgba(236, 240, 241, 0.3); margin-top: 8px; }

    </style>
</head>
<body>

<div class="container">
    <div class="header">
        <h1>CloudKu CDN</h1>
        <p>Upload File Gratis & Permanen</p>
    </div>

    <form id="uploadForm">
        <div class="upload-area" id="uploadArea">
            <div class="upload-text">Select or drop files</div>
            <div class="upload-subtext">Mendukung file hingga 200 MB</div>
        </div>
        <input type="file" id="fileInput" name="file">
        
        <div class="file-info" id="fileInfo">
            <span class="file-name-preview" id="fileNamePreview"></span>
        </div>

        <div class="progress-container" id="progressContainer">
            <div class="progress-bar-wrapper">
                <div class="progress-bar" id="progressBar"></div>
            </div>
        </div>

        <button type="submit" class="btn" id="uploadBtn">Upload File Sekarang</button>
    </form>

    <div class="result" id="resultContainer">
        <div class="success-badge">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
            Berhasil Diunggah!
        </div>

        <div class="input-group">
            <span class="label-text">Public URL</span>
            <div class="url-display">
                <span class="url-text" id="resUrlText">-</span>
                <button class="copy-action" id="copyBtn">Copy</button>
            </div>
        </div>

        <div class="action-links">
            <button onclick="location.reload()" class="sec-btn">Upload File</button>
        </div>
    </div>

    <div class="footer">
        <a href="/docs" class="footer-link">üìñ API Documentation</a>
        <div class="footer-text">¬© 2026 CloudKu CDN ‚Ä¢ All Files Secured</div>
    </div>
</div>

<script>
    const uploadArea = document.getElementById('uploadArea');
    const fileInput = document.getElementById('fileInput');
    const uploadForm = document.getElementById('uploadForm');
    const uploadBtn = document.getElementById('uploadBtn');
    const progressContainer = document.getElementById('progressContainer');
    const progressBar = document.getElementById('progressBar');
    const fileInfo = document.getElementById('fileInfo');
    const fileNamePreview = document.getElementById('fileNamePreview');
    const resultContainer = document.getElementById('resultContainer');
    const resUrlText = document.getElementById('resUrlText');
    const copyBtn = document.getElementById('copyBtn');

    uploadArea.addEventListener('click', () => fileInput.click());

    fileInput.addEventListener('change', (e) => {
        if(e.target.files[0]) {
            fileNamePreview.textContent = e.target.files[0].name;
            fileInfo.classList.add('show');
        }
    });

    uploadForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const file = fileInput.files[0];
        if (!file) return;

        const formData = new FormData();
        formData.append('file', file);

        uploadBtn.disabled = true;
        uploadBtn.textContent = 'Memproses...';
        progressContainer.classList.add('show');

        const xhr = new XMLHttpRequest();
        xhr.upload.addEventListener('progress', (e) => {
            if (e.lengthComputable) {
                const percent = (e.loaded / e.total) * 100;
                progressBar.style.width = percent + '%';
            }
        });

        xhr.addEventListener('load', () => {
            if (xhr.status === 200 || xhr.status === 201) {
                try {
                    const response = JSON.parse(xhr.responseText);
                    const url = response.url || response.fileUrl || response.secure_url || (response.data && response.data.url);
                    showResult({ url: url });
                } catch (e) {
                    console.error('Error parsing response');
                }
            } else {
                uploadBtn.disabled = false;
                uploadBtn.textContent = 'Upload Gagal, Coba Lagi';
            }
        });

        xhr.open('POST', '/upload', true);
        xhr.send(formData);
    });

    function showResult(data) {
        uploadForm.style.display = 'none';
        resultContainer.style.display = 'block';
        resUrlText.textContent = data.url;
    }

    copyBtn.onclick = () => {
        navigator.clipboard.writeText(resUrlText.textContent);
        const originalText = copyBtn.textContent;
        copyBtn.textContent = 'Copied!';
        setTimeout(() => copyBtn.textContent = originalText, 2000);
    };
</script>
</body>
</html>
