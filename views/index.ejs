<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CloudKu CDN Uploader</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>‚òÅÔ∏è</text></svg>">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0b1a14;
            background-image: radial-gradient(rgba(46, 204, 113, 0.15) 1px, transparent 1px);
            background-size: 24px 24px;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            color: #ecf0f1;
        }
        
        .container {
            max-width: 700px;
            width: 100%;
            animation: fadeIn 0.5s ease-in;
            padding: 20px;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .header h1 {
            color: #2ecc71;
            margin-bottom: 10px;
            font-size: 42px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            font-weight: 700;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }
        
        .header p {
            color: rgba(236, 240, 241, 0.7);
            font-size: 18px;
            font-weight: 500;
        }
        
        .upload-area {
            border: 2px dashed rgba(46, 204, 113, 0.4);
            border-radius: 16px;
            padding: 80px 30px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 25px;
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(5px);
        }
        
        .upload-area:hover {
            background: rgba(46, 204, 113, 0.05);
            border-color: #2ecc71;
            transform: translateY(-2px);
        }
        
        .upload-area.dragging {
            background: rgba(46, 204, 113, 0.1);
            border-color: #27ae60;
        }
        
        .upload-text {
            font-size: 22px;
            color: #ecf0f1;
            font-weight: 600;
            margin-bottom: 10px;
        }
        
        .upload-subtext {
            font-size: 15px;
            color: rgba(236, 240, 241, 0.5);
        }
        
        input[type="file"] {
            display: none;
        }
        
        .file-info {
            background: rgba(0, 0, 0, 0.2);
            padding: 15px;
            border-radius: 10px;
            margin: 20px 0;
            display: none;
            border: 1px solid rgba(46, 204, 113, 0.3);
            border-left: 5px solid #2ecc71;
        }
        
        .file-info.show { display: block; }
        
        .file-name { font-weight: 600; color: #fff; margin-bottom: 5px; }
        .file-size { font-size: 14px; color: rgba(236, 240, 241, 0.6); }
        
        .progress-container { margin: 20px 0; display: none; }
        .progress-container.show { display: block; }
        
        .progress-bar-wrapper {
            width: 100%;
            height: 30px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            overflow: hidden;
            border: 1px solid rgba(46, 204, 113, 0.2);
        }
        
        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #2ecc71, #27ae60);
            width: 0%;
            transition: width 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #0b1a14;
            font-weight: bold;
            font-size: 13px;
        }
        
        .progress-status { margin-top: 10px; text-align: center; color: #2ecc71; font-size: 14px; }
        
        .btn {
            background: #2ecc71;
            color: #0b1a14;
            padding: 16px 35px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 700;
            width: 100%;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(46, 204, 113, 0.3);
        }
        
        .btn:hover:not(:disabled) {
            background: #27ae60;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(46, 204, 113, 0.4);
        }
        
        .btn:disabled { opacity: 0.5; cursor: not-allowed; }
        
        .result {
            margin-top: 30px;
            padding: 25px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 20px;
            border: 1px solid rgba(46, 204, 113, 0.3);
            backdrop-filter: blur(10px);
            display: none;
        }
        
        .result h3 { color: #2ecc71; margin-bottom: 20px; display: flex; align-items: center; gap: 10px; }
        
        .result-info { background: rgba(0, 0, 0, 0.2); padding: 15px; border-radius: 10px; margin-bottom: 15px; }
        .result-label { font-size: 12px; color: rgba(236, 240, 241, 0.5); text-transform: uppercase; margin-bottom: 5px; }
        .result-value { font-size: 14px; color: #fff; font-weight: 600; }
        
        .url-box {
            background: #fff;
            padding: 12px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
            margin: 15px 0;
        }
        
        .url-text { flex: 1; word-break: break-all; font-size: 14px; color: #1e8449; font-weight: 600; }
        
        .copy-btn {
            background: #0b1a14;
            color: #2ecc71;
            border: 1px solid #2ecc71;
            padding: 8px 15px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: 0.3s;
        }
        
        .copy-btn:hover { background: #2ecc71; color: #0b1a14; }
        
        .action-buttons { display: flex; gap: 10px; margin-top: 20px; }
        
        .action-btn {
            flex: 1;
            padding: 12px;
            border: 1px solid #2ecc71;
            background: transparent;
            color: #2ecc71;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            transition: 0.3s;
        }
        
        .action-btn:hover { background: rgba(46, 204, 113, 0.1); transform: translateY(-2px); }
        
        .footer {
            margin-top: 40px;
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid rgba(46, 204, 113, 0.2);
        }
        
        .footer-link { color: #2ecc71; text-decoration: none; font-weight: 600; opacity: 0.8; }
        .footer-link:hover { opacity: 1; text-decoration: underline; }
        .footer-text { font-size: 13px; color: rgba(236, 240, 241, 0.4); margin-top: 10px; }
        
        .toast {
            position: fixed; top: 20px; right: 20px; background: #2ecc71; color: #0b1a14;
            padding: 15px 25px; border-radius: 10px; display: none; z-index: 1000; font-weight: bold;
        }
        .toast.show { display: block; animation: toastIn 0.3s ease-out; }
        @keyframes toastIn { from { transform: translateX(100px); } to { transform: translateX(0); } }

        @media (max-width: 768px) {
            .header h1 { font-size: 32px; }
            .action-buttons { flex-direction: column; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>CloudKu CDN</h1>
            <p>Upload File Gratis & Permanen</p>
        </div>
        
        <form id="uploadForm" enctype="multipart/form-data">
            <div class="upload-area" id="uploadArea">
                <div class="upload-text">Select or drop files</div>
                <div class="upload-subtext">Mendukung file hingga 200 MB</div>
            </div>
            
            <input type="file" id="fileInput" name="file" required>
            
            <div class="file-info" id="fileInfo">
                <div class="file-name" id="fileName"></div>
                <div class="file-size" id="fileSize"></div>
            </div>
            
            <div class="progress-container" id="progressContainer">
                <div class="progress-bar-wrapper">
                    <div class="progress-bar" id="progressBar">0%</div>
                </div>
                <div class="progress-status" id="progressStatus">Ready to upload...</div>
            </div>
            
            <button type="submit" class="btn" id="uploadBtn">
                <span id="btnText">Upload File Sekarang</span>
            </button>
        </form>

        <div class="result" id="resultContainer">
            <h3>‚úÖ Berhasil Diunggah!</h3>
            <div class="result-info">
                <div class="result-label">File Name</div>
                <div class="result-value" id="resFileName">-</div>
            </div>
            <div class="url-box">
                <span class="url-text" id="resUrlText">-</span>
                <button class="copy-btn" id="copyBtn">Copy</button>
            </div>
            <div class="action-buttons">
                <a href="#" id="viewFileBtn" target="_blank" class="action-btn">Lihat File</a>
                <button onclick="location.reload()" class="action-btn">Upload Lagi</button>
            </div>
        </div>
        
        <div class="footer">
            <a href="/docs" class="footer-link">üìñ API Documentation</a>
            <div class="footer-text">¬© CloudKu CDN ‚Ä¢ Uploader All Files</div>
        </div>
    </div>
    
    <div class="toast" id="toast"></div>

    <script>
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const uploadForm = document.getElementById('uploadForm');
        const uploadBtn = document.getElementById('uploadBtn');
        const btnText = document.getElementById('btnText');
        const progressContainer = document.getElementById('progressContainer');
        const progressBar = document.getElementById('progressBar');
        const progressStatus = document.getElementById('progressStatus');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const resultContainer = document.getElementById('resultContainer');
        const resFileName = document.getElementById('resFileName');
        const resUrlText = document.getElementById('resUrlText');
        const viewFileBtn = document.getElementById('viewFileBtn');
        const copyBtn = document.getElementById('copyBtn');

        uploadArea.addEventListener('click', () => fileInput.click());

        fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) displayFileInfo(file);
        });

        uploadArea.addEventListener('dragover', (e) => { e.preventDefault(); uploadArea.classList.add('dragging'); });
        uploadArea.addEventListener('dragleave', () => { uploadArea.classList.remove('dragging'); });
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragging');
            const file = e.dataTransfer.files[0];
            if (file) { fileInput.files = e.dataTransfer.files; displayFileInfo(file); }
        });

        function displayFileInfo(file) {
            const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
            fileName.textContent = file.name;
            fileSize.textContent = `${sizeMB} MB`;
            fileInfo.classList.add('show');
            resultContainer.style.display = 'none';
        }

        uploadForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const file = fileInput.files[0];
            if (!file) { showToast('Pilih file dulu!', 'error'); return; }
            
            const formData = new FormData(uploadForm);
            uploadBtn.disabled = true;
            btnText.textContent = 'Uploading...';
            progressContainer.classList.add('show');
            progressStatus.textContent = 'Mengirim file ke server...';
            
            const xhr = new XMLHttpRequest();
            
            xhr.upload.addEventListener('progress', (e) => {
                if (e.lengthComputable) {
                    const percent = Math.round((e.loaded / e.total) * 100);
                    progressBar.style.width = percent + '%';
                    progressBar.textContent = percent + '%';
                    
                    if (percent < 30) {
                        progressStatus.textContent = 'Mengirim file ke CloudKu CDN...';
                    } else if (percent < 70) {
                        progressStatus.textContent = 'Uploading ke server...';
                    } else if (percent < 100) {
                        progressStatus.textContent = 'Hampir selesai...';
                    } else {
                        progressStatus.textContent = 'Memproses file...';
                    }
                }
            });
            
            xhr.addEventListener('load', () => {
                if (xhr.status === 200) {
                    progressStatus.textContent = '‚úÖ Upload berhasil!';
                    
                    try {
                        const response = JSON.parse(xhr.responseText);
                        console.log('Response:', response); // Debug log
                        
                        if (response.status === 'success') {
                            // Tampilkan hasil upload
                            showResult({
                                filename: response.filename,
                                originalName: response.originalName,
                                url: response.url
                            });
                            showToast('Upload berhasil!', 'success');
                        } else {
                            showToast(response.message || 'Upload gagal', 'error');
                            resetForm();
                        }
                    } catch (e) {
                        console.error('Parse error:', e);
                        console.log('Response text:', xhr.responseText); // Debug log
                        // Jika bukan JSON berarti HTML response (form biasa)
                        // Reload untuk menampilkan hasil dari server
                        showToast('Upload berhasil! Memuat ulang...', 'success');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    }
                } else {
                    showToast('Error Server (' + xhr.status + ')', 'error');
                    resetForm();
                }
            });
            
            xhr.addEventListener('error', () => {
                showToast('Koneksi terputus atau gagal!', 'error');
                resetForm();
            });
            
            xhr.open('POST', '/upload', true);
            xhr.send(formData);
        });

        function showResult(data) {
            console.log('Showing result:', data); // Debug log
            
            // Sembunyikan form
            uploadForm.style.display = 'none';
            progressContainer.classList.remove('show');
            
            // Tampilkan hasil
            resFileName.textContent = data.originalName || data.filename;
            resUrlText.textContent = data.url;
            viewFileBtn.href = data.url;
            
            // Set copy button
            copyBtn.onclick = () => copyUrl(data.url);
            
            // Show result container
            resultContainer.style.display = 'block';
        }

        function resetForm() {
            uploadBtn.disabled = false;
            btnText.textContent = 'Upload File Sekarang';
            progressContainer.classList.remove('show');
            progressBar.style.width = '0%';
            progressBar.textContent = '0%';
            progressStatus.textContent = 'Ready to upload...';
        }

        function copyUrl(url) {
            navigator.clipboard.writeText(url).then(() => {
                showToast('URL disalin!', 'success');
            }).catch(() => {
                showToast('Gagal menyalin URL', 'error');
            });
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.style.background = type === 'success' ? '#2ecc71' : '#e74c3c';
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 4000);
        }
    </script>
</body>
</html>
